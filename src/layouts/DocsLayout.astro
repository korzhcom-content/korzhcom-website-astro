---
import BaseHead from "../components/BaseHead.astro";
import DocsNavigation from "../components/DocsNavigation.astro";

const { title, docName, docTitle } = Astro.props
---
<html lang="en">
<head>
    <BaseHead title={title}/>
</head>
<body class="m4-cloak" style={{ paddingTop: "52px" }}>
<DocsNavigation wide={true} {docName} {docTitle}/>

<main>
    <aside id="sidebar">

    </aside>

    <section id="content">
        <slot name="content" />
    </section>
</main>

<slot/>

<script>
    import "../js/slow-loading.js"
</script>
</body>
</html>
<style is:global>
    #appbar {
        border-bottom: 1px solid #cccccc !important;
    }
</style>
<style lang="less">
    @import "../styles/docs.less";
</style>