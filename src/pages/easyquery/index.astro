    window.addEventListener("load", () => {
        const [_, action] = window.location.href.split("#")

        if (action === 'get-trial') {
            getTrial()
            return
        }

        const editions = ['asp-core-edition', 'asp-net-edition', 'winforms-edition', 'silverlight-edition', 'wpf-edition', 'delphi-edition']
        if (editions.includes(action)) {
            $("#licensing")[0].scrollIntoView()
            Metro.getPlugin("#license-price", 'tabs').open(editions.indexOf(action) + 1)
        }
    })
