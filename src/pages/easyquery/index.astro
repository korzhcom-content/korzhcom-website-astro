                            <div class="image-preview h-100 border bd-default">
                                <Image src={easyReport01Image} data-original={easyReport01Image.url} alt="" />
                            </div>
                        </div>
                        <div class="cell-6">
                            <div class="image-preview h-100 border bd-default">
                                <Image src={easyReport02Image} data-original={easyReport02Image.url} alt="" />
