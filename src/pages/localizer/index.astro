<style is:global lang="less">
    #appbar {
        --appbar-item-background-hover: #53915e;
        --appbar-item-color-hover: #ffffff;
        --d-menu-item-background-hover: #53915e;
        --d-menu-item-color-hover: #ffffff;
        .active-container {
            background-color: #53915e;
            color: #fff;
        }
    }
    
    .hero-section {
        background:
                url(../../images/site/bg-left.svg) left center / contain no-repeat scroll padding-box border-box,
                url(../../images/site/bg-right.svg) right center / contain no-repeat scroll padding-box border-box,
                linear-gradient(60deg, #2a6c3e, #7bb579) 0 0 / auto repeat scroll padding-box border-box #2a6c3e;
        background-blend-mode: normal, normal;
        color: rgb(255, 255, 255);
    }
    .screens-background {
        background-color: rgb(154,189,145);
        padding: 40px 0;
        color: #ffffff;
        .img-wrap {
            height: 160px;
            overflow: hidden;
        }
    }
    .feature-check {
        color: rgb(154,189,145)!important;
    }
</style>
