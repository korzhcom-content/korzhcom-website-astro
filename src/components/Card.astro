---
const { icon, title, stagger } = Astro.props;
---

<article class:list={["card", {stagger}]}>
    <p class="title mb-4">
        {icon && <span class:list={["icon", {icon}]}></span>}
        <span set:html={title} />
    </p>
    <div class="body">
        <slot name="body"/>
    </div>
    <div class="actions">
        <slot name="actions"/>
    </div>
</article>

<style lang="less">
    .card {
        border: 1px solid var(--border-color);
        background-color: #ffffff;
        padding: clamp(1rem, calc(0.125rem + 3vw), 2.5rem);
        flex-direction: column;
        gap: clamp(0.5rem, calc(0.125rem + 1vw), 1rem);

        .title {
            font-weight: 600;
            font-size: 24px;
            color: #000000;
            line-height: 1.2;
            gap: 1rem;
            align-items: center;
            border-bottom: 1px solid var(--border-color);
            padding-bottom: 10px;
        }

        .icon {
            border: 1px solid var(--border-color);
            background-color: #ffffff;
            padding: 0.2em;
            border-radius: 0.25rem;
        }

        .body {
            margin: 0 0 10px 0;
            font-size: clamp(.875rem, calc(0.5rem + 1vw), 1rem);
        }

        .actions {
            margin-top: auto;
        }
    }
</style>